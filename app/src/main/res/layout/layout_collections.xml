<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:background="@drawable/bg_rounded_border"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/collection_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_photo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/record_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="25sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/amount_of_elements"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="?android:attr/textColorHint"
            android:textAlignment="textStart"
            android:fontFamily="@font/muli_medium"
            android:text="0 items"
            android:paddingStart="8dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:gravity="center">

        <ImageView
            android:id="@+id/actions_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:drawablePadding="5dp"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_button_actions" />

    </LinearLayout>

</LinearLayout>